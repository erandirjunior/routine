<?xml version='1.0' encoding='utf-8'?>
<widget id="br.com.erandir.routine" version="0.0.3" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>Routine</name>
    <description>Quasar app to manager everyday tasks</description>
    <author email="aefs12junior@gmail.com" href="https://github.com/erandirjunior/">
        Antonio Erandir Feitosa Soares Junior
    </author>
    <content src="index.html" />
    <preference name="Orientation" value="portrait" />
    <plugin name="cordova-plugin-whitelist" spec="1" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <preference name="loadUrlTimeoutValue" value="700000" />
    <platform name="android">
        <allow-intent href="market:*" />
        <icon density="ldpi" src="icons/ic_launcher36x36.png" />
        <icon density="hdpi" src="icons/ic_launcher72x72.png" />
        <icon density="xhdpi" src="icons/ic_launcher96x96.png" />
        <icon density="xxhdpi" src="icons/ic_launcher144x144.png" />
        <icon density="xxxhdpi" src="icons/ic_launcher192x192.png" />
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
    </platform>
    <allow-navigation href="about:*" />
</widget>
